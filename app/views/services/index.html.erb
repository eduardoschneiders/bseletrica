<div class="span12 application">
  <%= mainTitle "Obras" %>
  <div class="services">
    <ul>
      <%
      row = 0
      @services.each do |service|


        row = row + 1
        if (row <= 4)
          divClass = 'noMarginTop'
        end

        if row % 5 == 0
          divClass = 'noMarginLeft'
        end
      %>
        <li class="<%= divClass %>">

          <%= link_to service do %>


            <%= image_tag service.image.url(:small) %>
            <div class="desc">
              <%= service.title %>
            </div>

          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
<div class="clear"></div>